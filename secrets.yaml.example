# ESPHome Secrets Configuration Template
# Copy this file to secrets.yaml and fill in your actual values
# secrets.yaml is excluded from git for security

# WiFi Configuration
wifi_ssid: "Your-WiFi-SSID"
wifi_password: "Your-WiFi-Password"

# Fallback Access Point (shown when device can't connect to WiFi)
ap_ssid: "ESP32-Fallback"
ap_password: "YourFallbackPassword"

# Home Assistant Sensor Entity IDs
# Replace these with your actual Home Assistant sensor entity IDs
ha_outdoor_temp: "sensor.your_outdoor_temperature"
ha_outdoor_humidity: "sensor.your_outdoor_humidity"
ha_wind_speed: "sensor.your_wind_speed"
ha_indoor_temp: "sensor.your_indoor_temperature"
